<div class="index">
<% @projects.each do |project|  %>
  <ul class="projectindex">

  <% if logged_in? %>
    <li class="admin"><%= link_to 'Edit', edit_project_path(project) %></li> |
  <li class="admin"><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></li>
  <% end %>

    <li><%= link_to image_tag(project.image.url), project %></li>
    <li>
      <h2 class="bottom title"> <%= link_to project.projectname, project %></h2>
      <h3 class="bottom details">~ <%= project.projectdetails %> ~</h3>
    </li>
    
  </ul>
    <% end %>
<br/>

  <% if logged_in? %>
  <%= link_to 'New Project', new_project_path, :class => "admin" %> 
  <% end %>

</div>

