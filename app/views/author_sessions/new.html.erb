
<div class="formpage">
<h1>Login</h1>

<%= form_tag author_sessions_path, method: :post do %>

<div class="form">
    <%= label_tag :email %><br>
    <%= text_field_tag :email %>
</div>

<div class="form">
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
</div>

  <div class="form">
    <%= submit_tag "Login" %>
  </div>
  <% end -%>

<%= link_to 'Back', projects_path, :class => "admin" %>
</div>
