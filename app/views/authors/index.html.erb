<h1>Listing Authors</h1>

<table>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.username %></td>
        <td><%= author.email %></td>
        <td><%= link_to 'Show', author, :class => "admin"  %> | </td>
        <td> <%= link_to 'Edit', edit_author_path(author), :class => "admin"  %> | </td>
        <td> <%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }, :class => "admin"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

